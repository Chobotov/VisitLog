<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Alert"
    >

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/AddInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_edit_alertview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:hint="@string/NameTextLayout"
            android:scrollbarThumbHorizontal="@color/addPeopleTextColor"
            android:scrollbarThumbVertical="@color/addPeopleTextColor"
            android:textColor="@color/addPeopleTextColor"
            android:textColorHighlight="@color/addPeopleTextColor"
            android:textColorHint="@color/addPeopleTextColor"
            android:textColorLink="@color/addPeopleTextColor"
            android:textCursorDrawable="@color/addPeopleTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>